{
  "name": "@melkir/crypto",
  "version": "1.7.0",
  "description": "A simple encrypt and decrypt module for node.js",
  "main": "dist/index.cjs",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "crypto",
    "encrypt",
    "decrypt",
    "encryption",
    "decryption",
    "cipher",
    "aes-256",
    "aes256",
    "hashr"
  ],
  "author": "melkir",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/melkir/crypto/issues"
  },
  "homepage": "https://github.com/melkir/crypto#readme",
  "engines": {
    "node": ">=22.15.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melkir/crypto.git"
  },
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "bun-types": "^1.2.11",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": {
      "resolve": true
    },
    "splitting": true,
    "clean": true
  }
}
